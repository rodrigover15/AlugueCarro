{% extends 'base.html.twig' %}

{% block body %}
    <h1>Veiculos</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ veiculo.id }}</td>
            </tr>
            <tr>
                <th>Marca</th>
                <td>{{ veiculo.marca }}</td>
            </tr>
            <tr>
                <th>Modelo</th>
                <td>{{ veiculo.modelo }}</td>
            </tr>
            <tr>
                <th>Ano</th>
                <td>{% if veiculo.ano %}{{ veiculo.ano|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Cor</th>
                <td>{{ veiculo.cor }}</td>
            </tr>
            <tr>
                <th>Categoria</th>
                <td>{{ veiculo.categoria }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('veiculos_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('veiculos_edit', { 'id': veiculo.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
