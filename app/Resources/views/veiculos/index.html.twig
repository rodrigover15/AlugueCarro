{% extends 'base-admin.html.twig' %}

{% block body %}
    <h1>Veiculos list</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Marca</th>
                <th>Modelo</th>
                <th>Ano</th>
                <th>Cor</th>
                <th>Categoria</th>
                <th>Actions</th>
            </tr>
        </thead>
        
        <tbody>
        {% for veiculo in veiculos %}
             
            <tr>
                <a href="{{ path('veiculos_new') }}">Cadastrar<span class="glyphicon glyphicon-plus"></span></a>
                <td><a href="{{ path('veiculos_show', { 'id': veiculo.id }) }}">{{ veiculo.id }}</a></td>
                <td>{{ veiculo.marca }}</td>
                <td>{{ veiculo.modelo }}</td>
                <td>{% if veiculo.ano %}{{ veiculo.ano|date('Y-m-d') }}{% endif %}</td>
                <td>{{ veiculo.cor }}</td>
                <td>{{ veiculo.categoria }}</td>
                <td>
                    
                    <a href="{{ path('veiculos_edit', { 'id': veiculo.id }) }}">Editar<span class="glyphicon glyphicon-pencil"></span></a>
                    
                </td>
            </tr>
        {% endfor %}
        </tbody>
   
{% endblock %}
