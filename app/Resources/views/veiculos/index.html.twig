{% extends 'base-admin.html.twig' %}

{% block body %}
    <h1>Veiculos</h1>

    <table class="table table-hover table-responsive">
        <thead>
            <tr>
                <th>Id</th>
                <th>Marca</th>
                <th>Modelo</th>
                <th>Ano</th>
                <th>Cor</th>
                <th>Categoria</th>
                <th>Cidade</th>
                <th>AÃ§oes</th>
            </tr>
        </thead>
        <tbody>
            {% for veiculo in veiculos %}
                <tr>
                    <td><a href="{{ path('veiculos_show', { 'id': veiculo.id }) }}">{{ veiculo.id }}</a></td>
                    <td>{{ veiculo.marca }}</td>
                    <td>{{ veiculo.modelo }}</td>
                    <td>{% if veiculo.ano %}{{ veiculo.ano|date('d/m/Y') }}{% endif %}</td>
                    <td>{{ veiculo.cor }}</td>
                    <td>{{ veiculo.categoria }}</td>
                    <td>{{ veiculo.cidade }}</td>
                    <td>

                        <a href="{{ path('veiculos_edit', { 'id': veiculo.id }) }}">Editar<span class="glyphicon glyphicon-pencil"></span></a>
             
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>



{% endblock %}
